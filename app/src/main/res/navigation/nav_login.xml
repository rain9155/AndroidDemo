<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/login_fragment">


    <!--
        popUpTo: 将目的地从栈中弹出，直到popUpTo指向的目的地，然后再执行action操作
        popUpToInclusive: true表示在执行弹出操作时，连popUpTo指向的目的地也要弹出
        -->
    <action
        android:id="@+id/action_nav_login_to_peopleFragment"
        app:destination="@id/people_fragment"
        app:popUpTo="@id/people_fragment"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.androiddemo.jetpack.architecture.navigation.login.LoginFragment"
        android:label="登陆"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/register_fragment"/>

    </fragment>

    <fragment
        android:id="@+id/register_fragment"
        android:name="com.example.androiddemo.jetpack.architecture.navigation.login.RegisterFragment"
        android:label="注册"
        tools:layout="@layout/fragment_register"/>

</navigation>