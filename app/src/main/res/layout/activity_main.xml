<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_custom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义View学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawable学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material Design学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_jetpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jetpack学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内置View学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音视频学习"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_ipc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPC学习"/>

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>