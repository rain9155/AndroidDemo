<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:dividerHeight="10dp"      设置分割线高度-->
    <!--android:divider="@null" (透明)    设置分隔线的颜色资源或图片资源-->
    <!--android:scrollbars="none|vertical|horizontal"   设置滚动条-->
    <!--android:listSelector="#00000000|@android:color/transparent"  取消ListView的点击效果-->

    <com.example.androiddemo.view.listview.OverScrollListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:divider="#aba5a5"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

</FrameLayout>
