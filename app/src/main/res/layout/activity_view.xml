<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewActivity">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canvas使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_patheffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PathEffect使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_shader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shader使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_xfermode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xfermode使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrix使用"/>


    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>