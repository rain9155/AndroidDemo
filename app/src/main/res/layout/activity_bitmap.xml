<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.martix.BitmapActivity">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_color_matrix1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorMatrix矩阵使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_color_matrix2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorMatrix相关函数使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrix矩阵使用"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_to_pixel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片像素点处理"/>


    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>